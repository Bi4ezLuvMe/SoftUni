@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure you have a layout page
}


<!-- Banner Section -->
<div class="jumbotron text-center bg-danger text-white" style="padding: 3rem 1rem;">
    <h1>Welcome to Our Kickboxing Gear Shop!</h1>
    <p>Find the best gear for your training and competitions!</p>
    <a asp-controller="Product" asp-action="Index" asp class="btn btn-light btn-lg">Shop Now</a>
</div>

<!-- Featured Products Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Featured Products</h2>
    <div class="row">
        @* Loop through featured products *@
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top product-image" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text text-primary"><strong>$@product.Price</strong></p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" asp class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Footer Section -->
<footer class="text-center mt-5 bg-dark text-white py-4">
    <p>&copy; @DateTime.Now.Year KickShop. All rights reserved.</p>
</footer>

<style>
    .product-image, .category-image {
        height:350px; /* Fixed height for uniformity */
        width:100%;
    }
</style>
