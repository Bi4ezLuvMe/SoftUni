@model KickShop.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Your Shopping Cart</h2>

    @if (Model.CartItems.Count == 0)
    {
        <p class="text-center">Your cart is empty!</p>
        <div class="text-center">
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
        </div>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                    <th></th> <!-- Empty header for remove button -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 100px; height: 100px;" />
                            <span>@item.ProductName</span>
                        </td>
                        <td>@item.Quantity</td>
                        <td>@String.Format("{0:C}", item.Price)</td>
                        <td>@String.Format("{0:C}", item.TotalPrice)</td>
                        <td>
                            <form asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.ProductId" method="post" onsubmit="return confirm('Are you sure you want to remove this item from your cart?');">
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Cart Summary -->
        <div class="row justify-content-end">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <hr />
                        <p>Total: <strong>@String.Format("{0:C}", Model.CartTotal)</strong></p>
                        <a href="/Checkout" class="btn btn-primary btn-block">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
